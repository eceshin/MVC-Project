
@{
    ViewData["Title"] = "Liste";
}




@model KategoriListesiViewModel

<h1>@Model.Mesaj</h1>



<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#KategoriEkleModal">
  Kategori Ekle
</button> 

  <form method="post" action="/Kategori/KategoriEkle"><!-- Modal -->
<div class="modal fade" id="KategoriEkleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Kategori Ekleme Paneli</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      
            
  <div class="form-group">
    <label for="exampleInputEmail1">Kategori Adı</label>
    <input asp-for="Kategori.KategoriAdi" type="text" class="form-control" id="exampleInputEmail1"  placeholder="Kategori Ekle">

  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Kategori Tanımı</label>
    <input  asp-for="Kategori.Tanimi" type="text" class="form-control" id="exampleInputPassword1" placeholder="Kategori Tanımı">
  </div>
 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <button type="submit" class="btn btn-primary">Ekle</button>
      </div>
    </div>
  </div>
</div>
   </form>
<table class="table table-hover">
    @*<tr>
        <th>Kategori No</th>
        <th>Kategori Adı</th>
        <th>Kategori Tanımı</th>

    </tr>*@
    @foreach (Kategori item in Model.Kategoriler)
   {
        <tr>
            
       <td> @*<th>@item.KategoriID</th>
        <th>@item.KategoriAdi</th>
        <th>@item.Tanimi</th>*@

       <a href="/Kategori/UrunListesi/@item.KategoriID">@item.KategoriAdi</a>
</td>
    </tr>


   }






</table>